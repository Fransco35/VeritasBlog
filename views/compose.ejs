<%- include('partials/header'); -%>
<div class="composeContent">
  <h1>Compose</h1>
  <form class="" action="/compose" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label>Upload Article Picture <p style="color: red;">not more than 7mb</p> </label>
      <input class="form-control" type="file" name="postImage" accept="image/*">
      <label>Title</label>
      <input class="form-control" type="text" name="postTitle">
      <label>Post</label>
      <textarea class="form-control" name="postBody" rows="5" cols="40">
      </textarea>
    </div>
    <br>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>
  <br>
  <div>
    <a class="btn btn-dark btn-md" href="/logout" role="button">Log Out</a>
  </div>
</div>



<%- include('partials/footer'); -%>